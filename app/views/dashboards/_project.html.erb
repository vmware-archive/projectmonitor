<% if project.is_a? Location %>
  <li class="project location-header">
    <span><%= project %></span>
  </li>
<% elsif project %>
  <li class="<%= project.css_class %>" id="<%= project.css_id %>" data-id="<%= project.id %>">
    <div class="information">
      <h1><%= link_to(project.code, project.url) %></h1>
      <div class="status-bar">
        <% if project.building? %>
          <div class="building-indicator"></div>
        <% else %>
          <div class="publish-date"><%= project.time_since_last_build %></div>
        <% end %>
        <% if project.tracker_project? %>
          <div class="inventory">
            Inventory:
            <span class="<%= project.tracker_unaccepted_stories_healthy? ? "healthy" : "unhealthy" %>">
              <%= project.tracker_num_unaccepted_stories %>
            </span>
          </div>
        <% end %>
        <div class="history">
          <ol>
            <% project.recent_online_statuses(status_count_for(projects_count)).each do |status| %>
              <li class="<%= status.in_words %>">
                <%= link_to status.in_words, status.url %>
              </li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>

    <div class="velocity-block">
      <% if project.tracker_project? %>
        <div class="velocity">
          <span class="label">Velocity</span>
          <span class="value"><%= project.current_velocity %></span>
        </div>
      <% else %>
        <div class="no-connection">No connection</div>
      <% end %>
    </div>
  </li>
<% else %>
  <li class="project empty-project"></li>
<% end %>
