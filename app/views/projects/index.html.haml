<h1>Projects</h1>

<%= link_to 'Add Project +', new_project_path, :class => "button add_button" %>

<table class="projects">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Project Type</th>
    <th>Enabled?</th>
    <th>Aggregate</th>
    <th>Tags</th>
    <th>Webhook URL</th>
    <th>Actions</th>
    <th>Remove</th>
  </tr>

  <% for project in @projects %>
    <tr id="project-<%= project.id %>" class="<%= cycle("odd", "even") %>">
      <td><%= h project.code %></td>
      <td><%= h project.name %></td>
      <td>
        <%= content_tag 'span', project.class.name.titleize, :title=>"#{project.feed_url}#{project.has_auth? ? ' (under auth)' : ''}" %>
        <%= image_tag("icons/lock.png", :style => "position:relative; top: 3px;") if project.has_auth? %>
      </td>
      <td style="text-align: center;">
        <% if project.enabled? %>
          &#10003;
        <% else -%>
          <span style="color: #AA1224;">&#10005;</span>
        <% end -%>
      </td>
      <td style="text-align: center;"><%= project.aggregate_project.present? ? project.aggregate_project.name : "" %></td>
      <td class="tag_list"><%= project.tag_list %></td>
      <td><%= project_status_url(project) %></td>
      <td>
        <%= link_to 'Edit', edit_project_path(project), :class => "button" %>
      </td>
      <td>
        <%= link_to 'Delete', project_path(project), :method => :delete, :class =>"button" %>
      </td>
    </tr>
  <% end %>
</table>

<h1>Aggregate Projects</h1>

<%= link_to 'Add Aggregate Project +', new_aggregate_project_path, :class => "button add_button" %>

<table class="projects">
  <tr>
    <th>Name</th>
    <th>Enabled?</th>
    <th>Tags</th>
    <th>Actions</th>
    <th>Remove</th>
  </tr>

  <% reset_cycle -%>
  <% for aggregate_project in @aggregate_projects %>
    <tr id="aggregate-project-<%= aggregate_project.id %>" class="<%= cycle("odd", "even") %>">
      <td><%= h aggregate_project.name %></td>
      <td style="text-align: center;">
        <% if aggregate_project.enabled? %>
          &#10003;
        <% else -%>
          <span style="color: #AA1224;">&#10005;</span>
        <% end -%>
      </td>
      <td class="tag_list"><%= aggregate_project.tag_list %></td>
      <td>
        <%= link_to 'Edit', edit_aggregate_project_path(aggregate_project), :class => "button" %>
      </td>
      <td>
        <%= link_to 'Delete', aggregate_project_path(aggregate_project), :method => :delete, :class =>"button" %>
      </td>
    </tr>
  <% end %>
</table>
